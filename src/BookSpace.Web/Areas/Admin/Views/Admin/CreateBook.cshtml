@model BookSpace.Web.Models.BookViewModels.CreateBookViewModel
@inject BookSpace.Repositories.Contracts.IGenreRepository genreRepository
@inject BookSpace.Repositories.Contracts.ITagRepository tagRepository

@{
    ViewData["Title"] = "Create Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="books-heading">
    <p>Create Book</p>
</div>
    <div class="user-form">
        <form asp-action="CreateBookAsync" class="user-form2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group user-form-input">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control user-input-field" type="text" placeholder="Book ISBN"/>
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group user-form-input">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control user-input-field" type="text" placeholder="Book Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control user-input-field" type="text" placeholder="Book Author"/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genres" class="control-label"></label>
                <input asp-for="Genres" class="form-control user-input-field" type="text" placeholder="Book Genre" />
                <span asp-validation-for="Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control user-input-field" type="text" placeholder="Book Tags"/>
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control user-input-field" type="text" placeholder="Book Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationYear" class="control-label"></label>
                <input asp-for="PublicationYear" class="form-control user-input-field"/>
                <span asp-validation-for="PublicationYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control user-input-field" type="number" min="1" max="5" placeholder="Between 1 and 5"/>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverUrl" class="control-label"></label>
                <input asp-for="CoverUrl" class="form-control user-input-field" type="text" placeholder="Book Cover" />
                <span asp-validation-for="CoverUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default user-btn-pass" />
            </div>
        </form>
    </div>

</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



