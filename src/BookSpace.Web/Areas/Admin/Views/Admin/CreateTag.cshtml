@model BookSpace.Web.Models.BookViewModels.TagViewModel

@{
    ViewData["Title"] = "Create Tag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="books-heading">
    <p>Create Tag</p>
</div>
<div class="user-form">
        <form asp-action="CreateTag" class="user-form2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group user-form-input">
                <label asp-for="Value" class="control-label">Tag Name</label>
                <input asp-for="Value" class="form-control user-input-field" type="text" placeholder="Book Tag" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default user-btn-pass" />
            </div>
        </form>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


