@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

<div class="books-heading">
    <p>Change Password</p>
</div>
<div class="user-form">
        <form method="post" class="user-form2">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group user-form-input">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control user-input-field" placeholder="Type current password"/>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group user-form-input">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control user-input-field" placeholder="Type new password"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group user-form-input">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control user-input-field" placeholder="Retype new password"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default user-btn-pass">Update password</button>
        </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
