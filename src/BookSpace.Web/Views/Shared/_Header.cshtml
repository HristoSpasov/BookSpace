@using Microsoft.AspNetCore.Identity
@using BookSpace.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <div class="alert-box success"></div>
    <div class="alert-box failure"></div>
    <div class="alert-box warning"></div>
    <div id="notifications">
        <div id="loadingBox" class="notification">
            <span>Loading content. Please wait...</span>
        </div>
    </div>
    <div class="pageheader">
        <header class="header">
            <div class="header-content row">
                <div class="header-logo">
                    <a class="logo" href="index.html">
                        <img src="~/images/logo.png" alt="Homepage">
                    </a>
                </div>

                <a class="header-search-btn" href="#0"></a>

                <div class="header-search">
                    <form role="search" method="get" class="header-search-form" action="#">
                        <label>
                            <span class="hide-content">Search for:</span>
                            <input type="search" class="search-field" placeholder="Type Keywords" value="" name="s" title="Search for:">
                        </label>
                        <div class="form-submit-btn">
                            <button type="submit" class="submit btn--primary btn--large full-width">Search</button>
                        </div>
                    </form>
                    <a href="#0" title="Close Search" class="header-search-close">Close</a>
                </div>

                <a class="header-toggle-menu" href="#0" title="Menu"><span>Menu</span></a>
                <nav class="header-nav-wrappper">
                    <ul class="header-nav nav-guest">
                        <li class="current"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="has-children">
                            <a asp-area="" asp-controller="Book" asp-action="Index">Books</a>
                            <ul class="sub-menu">
                                <li><a asp-area="" asp-controller="Home" asp-action="Category">Biography</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Category">Clasics</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Category">Fiction</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Category">History</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Category">Mystery</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Category">Psychology</a></li>
                                <li class="my-books"><a asp-area="" asp-controller="Home" asp-action="Category">All</a></li>
                            </ul>
                        </li>

                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class="header-nav nav-user">
                            <li><a asp-area="" asp-controller="UserBooks" asp-action="Index" class="nav-user">My Books</a></li>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-user has-children">Hello, @User.Identity.Name!</a>
                                <ul class="sub-menu">
                                    <li><a asp-area="" asp-controller="Home" asp-action="Category">Profile</a></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button class="logout-btn" type="submit">Log out</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }

                </nav>
            </div>
        </header>
    </div>
