    <div>
        @if (User.IsInRole("Admin"))
        {
            @await Html.PartialAsync("/Areas/Admin/Views/Shared/_AdminHeader.cshtml");
        }
        else
        {
            @await Html.PartialAsync("_Header");

        }
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <div>
        @await Html.PartialAsync("_Footer")
    </div>

    <environment include="Development">
        <script src="js/plugins/imagesLoaded.js"></script>
        <script src="js/plugins/masonry.js"></script>
        <script src="js/main.js"></script>
    </environment>
    <environment exclude="Development">

        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/js/drop-down.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
