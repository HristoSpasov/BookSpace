@model PopularBookViewModel

<article class="masonry-brick entry format-standard">

    <div class="brick">
        <div class="brick-header">
            <a asp-controller="Book" asp-action="BookDetails" asp-route-id="@Model.BookId" class="brick-thumb-link">
                <img src="@Model.CoverUrl" alt="">
            </a>
           
            <div class="brick-date">
                <a href="post.html">@Model.PublicationYear</a>
            </div>
            <h1 class="brick-title"><a asp-controller="Book" asp-action="BookDetails" asp-route-id="@Model.BookId">@Model.Title <br /> by <i>@Model.Author</i></a></h1>

        </div>
        <div class="entry-meta">
            <div>
                @await Html.PartialAsync("_RatingPartial", new KeyValuePair<string,decimal>(Model.Title,Model.Rating ))
                <span class="entry-meta-rating">Rating : @Model.Rating</span>
            </div>
            <div class="entry-learn-more">
                <span>
                    <a asp-controller="Book" asp-action="BookDetails" asp-route-id="@Model.BookId" class="learn-more-btn">Learn more</a>
                </span>
            </div>


        </div>
    </div>
</article>