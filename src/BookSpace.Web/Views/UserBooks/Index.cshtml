

<div class="user-books-wrapper">

    <div class="user-books-heading">
        <span>Hello, Bookworm!</span>
    </div>
    <div class="user-books-description">
        <p>
            Here you can keep track of your personal bookshelves.
            Keep exploring and tell us which are your favourite books!
        </p>
    </div>

    <nav class="user-vertical-nav">
        <ul>
            @*Create controller action for each partial view*@
            <li class="current"><button id="read" asp-controller="UserBooks" asp-action="Index">Read(12)</button></li>
            <li><a asp-controller="UserBooks" asp-action="Index">Currently reading(1)</a></li>
            <li><a asp-controller="UserBooks" asp-action="Index">Favourite(23)</a></li>
        </ul>
    </nav>

    <section id="renderPartial">

    </section>
</div>

<script>
    $('#read').on('click', process);

    function process(e) {
        e.preventDefault();
        e.stopPropagation();

        const renderSection = $('#renderPartial');

        $.ajax({
            type: "POST",
            url: "/UserBooks/_ReadBooksPartialListAsync",
            success: (htmlData) => renderSection.html(htmlData),
            error: (response) => alert('Error')
        })
    }
</script>