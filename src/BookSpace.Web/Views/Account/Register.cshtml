@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-register">
    <div class="books-heading">
        <p>New here? Create free account!</p>
    </div>
    <form asp-controller="Account" asp-action="Register" method="post" class="register-form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label>
            <input asp-for="Username" class="form-control" placeholder="Username">
        </label>
        <label>
            <input asp-for="Email" class="form-control" type="text" placeholder="Email">
        </label>
        <label>
            <input asp-for="Password" class="form-control" placeholder="Password">
        </label>
        <label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
        </label>
        <div class="form-submit-btn">
            <button type="submit" class="submit btn--primary btn--medium full-width">
                Register
            </button>
        </div>
    </form>
    <div style="width: 40%; margin: 0 auto">
        <a asp-controller="Account" asp-action="Login" class="btn btn--primary btn--medium full-width">
            Login
        </a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
